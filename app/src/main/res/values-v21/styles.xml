<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"  parent="AppTheme.Base">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/rippleColor</item>

    </style>

    <style name="AppTheme.ListTextView" parent="android:Widget.Material.TextView">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
        <item name="android:textColor">@color/tabsScrollColor</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>